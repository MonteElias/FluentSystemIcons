<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="FluentSystemIcons.Gallery.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FluentSystemIcons.Gallery"
    xmlns:models="using:FluentSystemIcons.Gallery.Models"
    xmlns:controls="using:FluentSystemIcons.Gallery.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:helpers="using:FluentSystemIcons.Gallery.Helpers"
    mc:Ignorable="d"
    Title="Fluent System Icons Gallery">

    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- BARRA DE TÍTULO -->
        <Grid x:Name="AppTitleBar"
              Grid.Row="0"
              Height="48"
              Background="Transparent"
              Margin="12,0"
              Visibility="Collapsed"
              Opacity="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <!-- Columna para el Botón de Tema (acceso rápido) -->
                <ColumnDefinition Width="Auto" />
                <!-- Columna para el Botón de Ajustes -->
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition x:Name="RightPaddingColumn" Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel x:Name="AppTitlePanel"
                        Grid.Column="0" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                <Image Source="/Assets/StoreLogo.svg" Width="24" Height="24" />
                <StackPanel>
                    <TextBlock Text="Fluent System Icons" Style="{StaticResource CaptionTextBlockStyle}" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <TextBlock Text="Gallery" FontSize="12" Foreground="{ThemeResource TextFillColorSecondary}" VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>

            <AutoSuggestBox x:Name="IconSearchBox"
                            Grid.Column="2" Width="300" VerticalAlignment="Center"
                            x:Uid="SearchBox" QueryIcon="Find"
                            TextChanged="IconSearchBox_TextChanged"
                            QuerySubmitted="IconSearchBox_QuerySubmitted"
                            SuggestionChosen="IconSearchBox_SuggestionChosen"
                            UpdateTextOnSelect="False">
                <AutoSuggestBox.ItemTemplate>
                    <DataTemplate x:DataType="models:IconInfo">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon FontFamily="{x:Bind FontFamily}" Glyph="{x:Bind Glyph}" FontSize="18"/>
                            <TextBlock Text="{x:Bind DisplayName}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </AutoSuggestBox.ItemTemplate>
            </AutoSuggestBox>

            <!-- Botón de Tema Rápido -->
            <Button x:Name="ThemeButton"
                    Grid.Column="3" VerticalAlignment="Center" Click="ThemeButton_Click"
                    Width="36" Height="36" Background="Transparent" BorderThickness="0" Padding="0" Margin="24,0,0,0">
                <ToolTipService.ToolTip>
                    <ToolTip Content="{x:Bind ThemeButtonToolTip, Mode=OneWay}"/>
                </ToolTipService.ToolTip>
                <FontIcon x:Name="ThemeIcon" FontFamily="{StaticResource FluentIconsFilled}" Glyph="&#xE20A;"
                          Foreground="{ThemeResource TextFillColorPrimaryBrush}" />
            </Button>

            <!-- Botón de Ajustes -->
            <Button x:Name="SettingsButton" x:Uid="SettingsButton"
                    Grid.Column="4" VerticalAlignment="Center"
                    Width="36" Height="36" Background="Transparent" BorderThickness="0" Padding="0" Margin="12,0,0,0">
                <Button.Flyout>
                    <Flyout Placement="BottomEdgeAlignedRight" ShouldConstrainToRootBounds="False">
                        <controls:SettingsControl x:Name="SettingsFlyoutContent"/>
                    </Flyout>
                </Button.Flyout>
                <FontIcon FontFamily="{StaticResource FluentIconsRegular}" Glyph="&#xF6A8;"
                          Foreground="{ThemeResource TextFillColorPrimaryBrush}" />
            </Button>
        </Grid>

        <!-- ÁREA PRINCIPAL DIVIDIDA -->
        <Grid Grid.Row="1" x:Name="MainContentGrid">
            <Grid.Resources>
                <helpers:GridLengthAnimationHelper x:Key="ColumnAnimationHelper"/>
            </Grid.Resources>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="400" />
                <ColumnDefinition x:Name="SidePanelColumn" Width="0" />
            </Grid.ColumnDefinitions>

            <!-- PANEL IZQUIERDO: CONTENEDOR DE ICONOS -->
            <Grid x:Name="ContentContainer"
                  Grid.Column="0"
                  Background="{ThemeResource LayerFillColorDefaultBrush}"
                  Margin="12,0,12,12"
                  CornerRadius="8"
                  Visibility="Collapsed"
                  Opacity="0">

                <Grid.Resources>
                    <MenuFlyout x:Key="IconCardFlyout">
                        <MenuFlyoutItem x:Uid="CopyGlyphMenuItem" Click="CopyGlyph_Click">
                            <MenuFlyoutItem.Icon>
                                <FontIcon FontFamily="{StaticResource FluentIconsRegular}" Glyph="&#xF32B;"/>
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem x:Uid="CopyFontIconMenuItem" Click="CopyFontIcon_Click">
                            <MenuFlyoutItem.Icon>
                                <FontIcon FontFamily="{StaticResource FluentIconsRegular}" Glyph="&#xF32B;"/>
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                    </MenuFlyout>

                    <DataTemplate x:Key="LargeIconTemplate" x:DataType="models:IconInfo">
                        <controls:IconCard Item="{x:Bind}" ContextFlyout="{StaticResource IconCardFlyout}" Width="190" Height="280" IconFontSize="64"/>
                    </DataTemplate>

                    <DataTemplate x:Key="MediumIconTemplate" x:DataType="models:IconInfo">
                        <Grid Width="110" Height="150" ContextFlyout="{StaticResource IconCardFlyout}" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="4">
                            <Grid Padding="8" RowSpacing="8">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <FontIcon Grid.Row="0" FontFamily="{x:Bind FontFamily, Mode=OneTime}" Glyph="{x:Bind Glyph, Mode=OneTime}" FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <StackPanel Grid.Row="1" Spacing="2" HorizontalAlignment="Center">
                                    <TextBlock Text="{x:Bind DisplayName, Mode=OneTime}" FontWeight="SemiBold" HorizontalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </DataTemplate>

                    <DataTemplate x:Key="SmallIconTemplate" x:DataType="models:IconInfo">
                        <Grid Width="80" Height="110" ContextFlyout="{StaticResource IconCardFlyout}" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="4">
                            <FontIcon FontFamily="{x:Bind FontFamily, Mode=OneTime}" Glyph="{x:Bind Glyph, Mode=OneTime}" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </DataTemplate>

                    <Style x:Key="RoundedGridViewItemStyle" TargetType="GridViewItem">
                        <Setter Property="Padding" Value="4"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="GridViewItem">
                                    <Grid x:Name="Root" CornerRadius="8">
                                        <Border x:Name="SelectionIndicator"
                            Background="Transparent"
                            BorderBrush="{ThemeResource SystemAccentColor}"
                            BorderThickness="2"
                            CornerRadius="8"
                            Opacity="0"/>

                                        <ContentPresenter x:Name="ContentPresenter"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Padding="{TemplateBinding Padding}">
                                            <ContentPresenter.RenderTransform>
                                                <TransformGroup>
                                                    <ScaleTransform x:Name="ContentScaleTransform" CenterX="95" CenterY="140" ScaleX="1.0" ScaleY="1.0" />
                                                    <TranslateTransform x:Name="ContentTranslateTransform" Y="0" />
                                                </TransformGroup>
                                            </ContentPresenter.RenderTransform>
                                        </ContentPresenter>

                                        <VisualStateManager.VisualStateGroups>
                                            <!-- Este grupo maneja el hover en items NO seleccionados -->
                                            <VisualStateGroup x:Name="CommonStates">
                                                <VisualState x:Name="Normal" />

                                                <VisualState x:Name="PointerOver">
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetName="ContentScaleTransform"
                                                     Storyboard.TargetProperty="ScaleX"
                                                     To="1.03" Duration="0:0:0.2">
                                                            <DoubleAnimation.EasingFunction>
                                                                <CubicEase EasingMode="EaseOut"/>
                                                            </DoubleAnimation.EasingFunction>
                                                        </DoubleAnimation>
                                                        <DoubleAnimation Storyboard.TargetName="ContentScaleTransform"
                                                     Storyboard.TargetProperty="ScaleY"
                                                     To="1.03" Duration="0:0:0.2">
                                                            <DoubleAnimation.EasingFunction>
                                                                <CubicEase EasingMode="EaseOut"/>
                                                            </DoubleAnimation.EasingFunction>
                                                        </DoubleAnimation>
                                                        <DoubleAnimation Storyboard.TargetName="ContentTranslateTransform"
                                                     Storyboard.TargetProperty="Y"
                                                     To="-4" Duration="0:0:0.2">
                                                            <DoubleAnimation.EasingFunction>
                                                                <CubicEase EasingMode="EaseOut"/>
                                                            </DoubleAnimation.EasingFunction>
                                                        </DoubleAnimation>
                                                    </Storyboard>
                                                </VisualState>
                                            </VisualStateGroup>

                                            <!-- ======================================================= -->
                                            <!--     NUEVO: Este grupo anula el hover en items           -->
                                            <!--     seleccionados para que no se levanten.              -->
                                            <!-- ======================================================= -->
                                            <VisualStateGroup x:Name="SelectionStates">
                                                <VisualState x:Name="Unselected" />

                                                <!-- Cuando está seleccionado (puntero NO encima) -->
                                                <VisualState x:Name="Selected">
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetName="ContentScaleTransform" Storyboard.TargetProperty="ScaleX" To="1.0" Duration="0:0:0.2" />
                                                        <DoubleAnimation Storyboard.TargetName="ContentScaleTransform" Storyboard.TargetProperty="ScaleY" To="1.0" Duration="0:0:0.2" />
                                                        <DoubleAnimation Storyboard.TargetName="ContentTranslateTransform" Storyboard.TargetProperty="Y" To="0" Duration="0:0:0.2" />
                                                    </Storyboard>
                                                </VisualState>

                                                <!-- Cuando está seleccionado Y el puntero está encima -->
                                                <VisualState x:Name="PointerOverSelected">
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetName="ContentScaleTransform" Storyboard.TargetProperty="ScaleX" To="1.0" Duration="0:0:0.2" />
                                                        <DoubleAnimation Storyboard.TargetName="ContentScaleTransform" Storyboard.TargetProperty="ScaleY" To="1.0" Duration="0:0:0.2" />
                                                        <DoubleAnimation Storyboard.TargetName="ContentTranslateTransform" Storyboard.TargetProperty="Y" To="0" Duration="0:0:0.2" />
                                                    </Storyboard>
                                                </VisualState>
                                            </VisualStateGroup>

                                        </VisualStateManager.VisualStateGroups>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Grid.Resources>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Padding="24,24,24,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock x:Uid="AppTitle" FontSize="40" FontWeight="SemiBold"/>
                        <TextBlock x:Name="IconCountTextBlock" Margin="0,4,0,0" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" 
                                x:Uid="ToggleSidePanelButton" 
                                Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                        <controls:GridSizeSwitcher x:Name="IconViewSwitcher" SelectionChanged="IconViewSwitcher_SelectionChanged"/>
                        <Button x:Name="ToggleSidePanelButton" Click="ToggleSidePanelButton_Click" Background="Transparent" BorderThickness="0" Width="40" Height="40">
                            <FontIcon FontFamily="{StaticResource FluentIconsRegular}" Glyph="&#xE8BD;"/>
                        </Button>
                    </StackPanel>
                </Grid>

                <GridView x:Name="IconGridView" 
                          Grid.Row="1" 
                          ItemsSource="{x:Bind FilteredIcons}" 
                          Padding="24,12,24,24" 
                          HorizontalAlignment="Center"
                          SelectionMode="Single"
                          IsItemClickEnabled="True"
                          ItemContainerStyle="{StaticResource RoundedGridViewItemStyle}"
                          SelectionChanged="IconGridView_SelectionChanged">
                    <GridView.ItemContainerTransitions>
                        <TransitionCollection>
                            <EntranceThemeTransition IsStaggeringEnabled="True"/>
                        </TransitionCollection>
                    </GridView.ItemContainerTransitions>
                    <GridView.ItemTemplate>
                        <StaticResource ResourceKey="LargeIconTemplate"/>
                    </GridView.ItemTemplate>
                    <GridView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsWrapGrid Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </GridView.ItemsPanel>
                </GridView>
            </Grid>

            <!-- PANEL DERECHO: CONTENEDOR DEL PANEL LATERAL -->
            <Grid Grid.Column="1"
                  x:Name="SidePanelContainer"
                  Background="{ThemeResource LayerFillColorDefaultBrush}"
                  Margin="0,0,12,12"
                  CornerRadius="8">
                <controls:SidePanelControl x:Name="SidePanel"/>
            </Grid>
        </Grid>

        <!-- PANTALLA DE BIENVENIDA -->
        <Grid x:Name="SplashGrid"
              Grid.RowSpan="2"
              Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="12">
                <Image Source="/Assets/SplashScreen.scale-200.svg"
                       Width="96"
                       Height="96" />
                <TextBlock x:Uid="SplashScreenTitle"
                           HorizontalAlignment="Center"
                           Style="{StaticResource SubtitleTextBlockStyle}"/>
                <ProgressRing x:Name="SplashProgressRing"
                              IsActive="True"
                              Margin="0,24,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>