<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="FluentSystemIcons.Gallery.UserControls.SidePanelControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:FluentSystemIcons.Gallery.UserControls"
    mc:Ignorable="d">

    <Grid>
        <Grid x:Name="DetailsGrid" Padding="24" RowSpacing="16" Opacity="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="200"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 1. ICONO GRANDE EN SU PROPIO PANEL -->
            <Border Grid.Row="0" Background="{ThemeResource LayerOnAcrylicFillColorDefaultBrush}" CornerRadius="8" HorizontalAlignment="Stretch">
                <FontIcon x:Name="IconDisplayTextBlock" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="120"/>
            </Border>

            <!-- 2. SWITCH DE CÓDIGO -->
            <local:CodeViewSwitcher x:Name="CodeSwitcher" Grid.Row="1" HorizontalAlignment="Stretch" Margin="0,8" SelectionChanged="CodeSwitcher_SelectionChanged"/>

            <!-- 3. DETALLES DEBAJO DEL SWITCH -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="0,-12,0,0">
                <StackPanel Spacing="24">

                    <!-- SECCIÓN: Nombre -->
                    <StackPanel Spacing="8">
                        <TextBlock x:Uid="SidePanel_NameHeader" Style="{ThemeResource CaptionTextBlockStyle}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="IconNameValueTextBlock" Grid.Column="0" VerticalAlignment="Center" TextWrapping="Wrap" IsTextSelectionEnabled="True"/>
                            <Button x:Name="CopyNameButton" x:Uid="CopyNameButton" Grid.Column="1" Background="Transparent" BorderThickness="0" HorizontalAlignment="Right" VerticalAlignment="Center" Click="CopyNameButton_Click" PointerExited="CopyButton_PointerExited">
                                <Grid Width="20" Height="20">
                                    <FontIcon Tag="Copy" FontFamily="{StaticResource FluentIconsRegular}" Glyph="&#xF32B;" FontSize="18"/>
                                    <FontIcon Tag="Check" FontFamily="{StaticResource FluentIconsRegular}" Glyph="&#xE305;" FontSize="18" Opacity="0"/>
                                </Grid>
                            </Button>
                        </Grid>
                    </StackPanel>

                    <!-- SECCIÓN: Texto/Código Glyph -->
                    <StackPanel Spacing="8">
                        <TextBlock x:Name="GlyphCodeTitleTextBlock" Style="{ThemeResource CaptionTextBlockStyle}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="GlyphCodeValueTextBlock" Grid.Column="0" VerticalAlignment="Center" TextWrapping="Wrap" FontFamily="Consolas" IsTextSelectionEnabled="True"/>
                            <TextBlock x:Name="CSharpGlyphCodeValueTextBlock" Grid.Column="0" VerticalAlignment="Center" TextWrapping="Wrap" Visibility="Collapsed" FontFamily="Consolas" IsTextSelectionEnabled="True"/>
                            <Button x:Name="CopyGlyphButton" x:Uid="SidePanel_CopyGlyphText" Grid.Column="1" Background="Transparent" BorderThickness="0" HorizontalAlignment="Right" VerticalAlignment="Center" Click="CopyGlyphButton_Click" PointerExited="CopyButton_PointerExited">
                                <Grid Width="20" Height="20">
                                    <FontIcon Tag="Copy" FontFamily="{StaticResource FluentIconsRegular}" Glyph="&#xF32B;" FontSize="18"/>
                                    <FontIcon Tag="Check" FontFamily="{StaticResource FluentIconsRegular}" Glyph="&#xE305;" FontSize="18" Opacity="0"/>
                                </Grid>
                            </Button>
                            <Button x:Name="CopyCSharpGlyphButton" x:Uid="SidePanel_CopyGlyphCode" Grid.Column="1" Background="Transparent" BorderThickness="0" HorizontalAlignment="Right" VerticalAlignment="Center" Click="CopyCSharpGlyphButton_Click" Visibility="Collapsed" PointerExited="CopyButton_PointerExited">
                                <Grid Width="20" Height="20">
                                    <FontIcon Tag="Copy" FontFamily="{StaticResource FluentIconsRegular}" Glyph="&#xF32B;" FontSize="18"/>
                                    <FontIcon Tag="Check" FontFamily="{StaticResource FluentIconsRegular}" Glyph="&#xE305;" FontSize="18" Opacity="0"/>
                                </Grid>
                            </Button>
                        </Grid>
                    </StackPanel>

                    <!-- SECCIÓN: Font Icon -->
                    <StackPanel Spacing="8">
                        <TextBlock x:Name="FontIconTitleTextBlock" Style="{ThemeResource CaptionTextBlockStyle}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="FontIconValueTextBlock" Grid.Column="0" VerticalAlignment="Center" TextWrapping="Wrap" FontFamily="Consolas" IsTextSelectionEnabled="True"/>
                            <TextBlock x:Name="CSharpFontIconValueTextBlock" Grid.Column="0" VerticalAlignment="Center" TextWrapping="Wrap" Visibility="Collapsed" FontFamily="Consolas" IsTextSelectionEnabled="True"/>
                            <Button x:Name="CopyFontIconButton" 
                                    x:Uid="SidePanel_CopyFontIconXaml" Grid.Column="1" Background="Transparent" BorderThickness="0" HorizontalAlignment="Right" VerticalAlignment="Center" Click="CopyFontIconButton_Click" PointerExited="CopyButton_PointerExited">
                                <Grid Width="20" Height="20">
                                    <FontIcon Tag="Copy" FontFamily="{StaticResource FluentIconsRegular}" Glyph="&#xF32B;" FontSize="18"/>
                                    <FontIcon Tag="Check" FontFamily="{StaticResource FluentIconsRegular}" Glyph="&#xE305;" FontSize="18" Opacity="0"/>
                                </Grid>
                            </Button>
                            <Button x:Name="CopyCSharpFontIconButton" 
                                    x:Uid="SidePanel_CopyFontIconCSharp" Grid.Column="1" Background="Transparent" BorderThickness="0" HorizontalAlignment="Right" VerticalAlignment="Center" Click="CopyCSharpFontIconButton_Click" Visibility="Collapsed" PointerExited="CopyButton_PointerExited">
                                <Grid Width="20" Height="20">
                                    <FontIcon Tag="Copy" FontFamily="{StaticResource FluentIconsRegular}" Glyph="&#xF32B;" FontSize="18"/>
                                    <FontIcon Tag="Check" FontFamily="{StaticResource FluentIconsRegular}" Glyph="&#xE305;" FontSize="18" Opacity="0"/>
                                </Grid>
                            </Button>
                        </Grid>
                    </StackPanel>

                    <!-- SECCIÓN: Symbol Icon -->
                    <StackPanel Spacing="8">
                        <TextBlock x:Name="SymbolIconTitleTextBlock" Style="{ThemeResource CaptionTextBlockStyle}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="SymbolIconValueTextBlock" Grid.Column="0" VerticalAlignment="Center" TextWrapping="Wrap" FontFamily="Consolas" IsTextSelectionEnabled="True"/>
                            <TextBlock x:Name="CSharpSymbolIconValueTextBlock" Grid.Column="0" VerticalAlignment="Center" TextWrapping="Wrap" Visibility="Collapsed" FontFamily="Consolas" IsTextSelectionEnabled="True"/>
                            <Button x:Name="CopySymbolIconButton" 
                                    x:Uid="SidePanel_CopySymbolIconXaml" Grid.Column="1" Background="Transparent" BorderThickness="0" HorizontalAlignment="Right" VerticalAlignment="Center" Click="CopySymbolIconButton_Click" PointerExited="CopyButton_PointerExited">
                                <Grid Width="20" Height="20">
                                    <FontIcon Tag="Copy" FontFamily="{StaticResource FluentIconsRegular}" Glyph="&#xF32B;" FontSize="18"/>
                                    <FontIcon Tag="Check" FontFamily="{StaticResource FluentIconsRegular}" Glyph="&#xE305;" FontSize="18" Opacity="0"/>
                                </Grid>
                            </Button>
                            <Button x:Name="CopyCSharpSymbolIconButton" 
                                    x:Uid="SidePanel_CopySymbolIconCSharp" Grid.Column="1" Background="Transparent" BorderThickness="0" HorizontalAlignment="Right" VerticalAlignment="Center" Click="CopyCSharpSymbolIconButton_Click" Visibility="Collapsed" PointerExited="CopyButton_PointerExited">
                                <Grid Width="20" Height="20">
                                    <FontIcon Tag="Copy" FontFamily="{StaticResource FluentIconsRegular}" Glyph="&#xF32B;" FontSize="18"/>
                                    <FontIcon Tag="Check" FontFamily="{StaticResource FluentIconsRegular}" Glyph="&#xE305;" FontSize="18" Opacity="0"/>
                                </Grid>
                            </Button>
                        </Grid>
                    </StackPanel>

                </StackPanel>
            </ScrollViewer>
        </Grid>

        <TextBlock x:Name="InitialMessageTextBlock" x:Uid="SidePanel_InitialMessage" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{ThemeResource BodyStrongTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
    </Grid>
</UserControl>