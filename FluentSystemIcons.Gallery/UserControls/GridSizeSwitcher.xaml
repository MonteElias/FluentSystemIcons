<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="FluentSystemIcons.Gallery.UserControls.GridSizeSwitcher"
    x:Name="RootControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:FluentSystemIcons.Gallery.Converters"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:SelectedGridSizeToVisibilityConverter x:Key="SelectedToVisibilityConverter"/>
        <converters:UnselectedGridSizeToVisibilityConverter x:Key="UnselectedToVisibilityConverter"/>

        <Style x:Key="GridSizeSwitcherButtonStyle" TargetType="Button">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid x:Name="RootGrid" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter Content="{TemplateBinding Content}" 
                                              Padding="12,8" 
                                              HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal" />
                                    <VisualState x:Name="PointerOver">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="RootGrid" Storyboard.TargetProperty="Background">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SubtleFillColorSecondaryBrush}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="RootGrid" Storyboard.TargetProperty="Background">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SubtleFillColorTertiaryBrush}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid x:Name="GridSizeSwitcherGrid" Height="40" Background="{ThemeResource LayerFillColorDefaultBrush}" CornerRadius="10" Padding="3" MinWidth="150">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ======================================================= -->
        <!--     AJUSTE FINAL: Indicador con BorderThickness="2"     -->
        <!-- ======================================================= -->
        <Border Grid.Column="0" 
                BorderBrush="{ThemeResource AccentFillColorDefaultBrush}" 
                BorderThickness="2"
                CornerRadius="8">
            <Border.RenderTransform>
                <TranslateTransform x:Name="BackgroundTranslateTransform"/>
            </Border.RenderTransform>
        </Border>
        
        <!-- Botón 1: Cuadrícula Grande -->
        <Button Grid.Column="0" 
                x:Uid="GridSizeSwitcher_Large"
                Style="{StaticResource GridSizeSwitcherButtonStyle}"
                Click="OnSizeButtonClicked"
                Tag="Large">
            <!-- ========================================================================================= -->
            <!--     CAMBIO: Se envuelve el contenido en un Viewbox para un centrado perfecto            -->
            <!-- ========================================================================================= -->
            <Viewbox Height="20">
                <Grid>
                    <FontIcon FontFamily="{StaticResource FluentIconsRegular}" Glyph="&#xEB77;"
                              Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                              Visibility="{Binding CurrentSizeMode, ElementName=RootControl, Converter={StaticResource UnselectedToVisibilityConverter}, ConverterParameter=Large}"/>
                    <FontIcon FontFamily="{StaticResource FluentIconsRegular}" Glyph="&#xEB77;"
                              Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                              Visibility="{Binding CurrentSizeMode, ElementName=RootControl, Converter={StaticResource SelectedToVisibilityConverter}, ConverterParameter=Large}"/>
                </Grid>
            </Viewbox>
        </Button>

        <!-- Botón 2: Cuadrícula Mediana -->
        <Button Grid.Column="1" 
                x:Uid="GridSizeSwitcher_Medium"
                Style="{StaticResource GridSizeSwitcherButtonStyle}"
                Click="OnSizeButtonClicked"
                Tag="Medium">
            <Viewbox Height="20">
                <Grid>
                    <FontIcon FontFamily="{StaticResource FluentIconsRegular}" Glyph="&#xEC52;"
                              Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                              Visibility="{Binding CurrentSizeMode, ElementName=RootControl, Converter={StaticResource UnselectedToVisibilityConverter}, ConverterParameter=Medium}"/>
                    <FontIcon FontFamily="{StaticResource FluentIconsRegular}" Glyph="&#xEC52;"
                              Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                              Visibility="{Binding CurrentSizeMode, ElementName=RootControl, Converter={StaticResource SelectedToVisibilityConverter}, ConverterParameter=Medium}"/>
                </Grid>
            </Viewbox>
        </Button>

        <!-- Botón 3: Cuadrícula Pequeña -->
        <Button Grid.Column="2"
                x:Uid="GridSizeSwitcher_Small"
                Style="{StaticResource GridSizeSwitcherButtonStyle}"
                Click="OnSizeButtonClicked"
                Tag="Small">
            <Viewbox Height="20">
                <Grid>
                    <FontIcon FontFamily="{StaticResource FluentIconsRegular}" Glyph="&#xEBF5;"
                              Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                              Visibility="{Binding CurrentSizeMode, ElementName=RootControl, Converter={StaticResource UnselectedToVisibilityConverter}, ConverterParameter=Small}"/>
                    <FontIcon FontFamily="{StaticResource FluentIconsRegular}" Glyph="&#xEBF5;"
                              Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                              Visibility="{Binding CurrentSizeMode, ElementName=RootControl, Converter={StaticResource SelectedToVisibilityConverter}, ConverterParameter=Small}"/>
                </Grid>
            </Viewbox>
        </Button>
    </Grid>
</UserControl>